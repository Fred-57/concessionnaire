generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Driver {
  id                        String   @id @db.Uuid
  name                      String
  license                   License
  numberOfYearsOfExperience Int
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
  Rental                    Rental[]
}

model Brand {
  id        String   @id @db.Uuid
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Model     Model[]
}

model Model {
  id             String       @id @db.Uuid
  name           String
  repairMileage  Int
  repairDeadline Int
  brand          Brand        @relation(fields: [brandId], references: [id])
  brandId        String       @db.Uuid
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  Motorcycle     Motorcycle[]
}

model Motorcycle {
  // Registration number
  id                  String    @id
  mileage             Int
  dateOfCommissioning DateTime
  status              Status
  model               Model     @relation(fields: [modelId], references: [id])
  modelId             String    @db.Uuid
  guarantee           Guarantee @relation(fields: [guaranteeId], references: [id])
  guaranteeId         String    @db.Uuid
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  Rental              Rental[]
  Maintenance         Maintenance[]
}

model Rental {
  id               String      @id @db.Uuid
  startDate        DateTime
  durationInMonths Int
  driver           Driver      @relation(fields: [driverId], references: [id])
  motorcycle       Motorcycle  @relation(fields: [motorcycleId], references: [id])
  driverId         String      @db.Uuid
  motorcycleId     String
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  Breakdown        Breakdown[]
}

model Breakdown {
  id          String   @id @db.Uuid
  date        DateTime
  description String
  rental      Rental   @relation(fields: [rentalId], references: [id])
  rentalId    String   @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  repair              Repair?     @relation(fields: [repairId], references: [id])
  repairId            String?     @db.Uuid
}

model Guarantee {
  id         String       @id @db.Uuid
  name       String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  Motorcycle Motorcycle[]
  Part       PartsOnGuarantees[]
}

model Part {
  id        String   @id @db.Uuid
  reference String
  name      String
  cost      Float
  stock     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Repair    Repair[]
  Guarantee PartsOnGuarantees[]
}

model PartsOnGuarantees {
  id        String   @id @db.Uuid
  guarantee Guarantee @relation(fields: [guaranteeId], references: [id])
  guaranteeId String @db.Uuid
  part      Part      @relation(fields: [partId], references: [id])
  partId    String   @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Maintenance {
  id                  String      @id @db.Uuid
  date                DateTime
  motorcycle          Motorcycle  @relation(fields: [motorcycleId], references: [id])
  motorcycleId        String
  repair              Repair?     @relation(fields: [repairId], references: [id])
  repairId            String?     @db.Uuid
  recommendation      String
  status              StatusMaintenance
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
}

model Repair {
  id            String   @id @db.Uuid
  identifier    String
  date          DateTime
  replacedParts Part[]
  cost          Float
  status        StatusRepair
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  Maintenance   Maintenance[]
  Breakdown     Breakdown[]
}

enum License {
  A
  A2
}

enum Status {
  RENTED
  AVAILABLE
  IN_REPAIR
  IN_MAINTENANCE
}

enum StatusMaintenance {
  PENDING
  DONE
  CANCELED
}

enum StatusRepair {
  PENDING
  DONE
  CANCELED
}
